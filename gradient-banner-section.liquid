{% assign img = section.settings.bannerimg %}
{% assign color = section.settings.color %}
{% if img != blank %}
<section class="gradientSection">
  
   <img 
                 src="{{ img | img_url: '1900x600' }}" 
                 class="bannerImg" 
                 alt="Banner Image"
                 data-aspectration="{{ img.aspect_ration}}"
                 data-src="{{ img_url }}" 
                 loading="lazy" 
                 
                 > 
   
  <div class="gradientBox">
    <div class="gradientContent">
    	
      <div class="headings">{{section.settings.heading}}</div>
      <p>{{section.settings.description}}</p>
      <a href="{{section.settings.url}}">{{section.settings.linktext}} ></a>
      
    
    </div>
  </div>
</section>
{% endif %}
<style>
 .main-content {
    width: 100%;
    max-width: 100%;
    padding: 0;
    margin-bottom: 0;
     
}
.gradientSection {
    position: relative;
}
.gradientSection::before {
  content:"";
    position: absolute;
  top:0;
  left:0;
  width: 100%;
    height: 100%;
  
  /* Permalink - use to edit and share this gradient: https://colorzilla.com/gradient-editor/#000000+0,000000+100&0+0,0.65+100 */
  background: -moz-linear-gradient(left,  rgba(0,0,0,0) 0%, {{color}} 100%); /* FF3.6-15 */
background: -webkit-linear-gradient(left,  rgba(0,0,0,0) 0%,{{color}} 100%); /* Chrome10-25,Safari5.1-6 */
background: linear-gradient(to right,  rgba(0,0,0,0) 0%,{{color}} 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00000000', endColorstr='#a6000000',GradientType=1 ); /* IE6-9 */

  
}
  .gradientSection img{
    width:100%;
    max-height:600px;
    object-fit:cover;
    display:block;
  }
.gradientSection .gradientBox {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.gradientSection .gradientBox .gradientContent {
    flex-basis: 50%;
    max-width: 50%;
    padding: 50px 8% 50px 0;
}
.gradientSection .gradientBox .gradientContent p {
    color: #fff;
    font-size: 18px;
} 
.gradientSection .gradientBox .gradientContent a {
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 1px;
}
.gradientSection .gradientBox .gradientContent .headings p {
    color: #fff;
    font-size: 50px;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
}
.gradientSection .gradientBox .gradientContent .headings p strong {
    color: #f7bc18;
}
  
  @media(max-width: 1399px){
  .gradientSection .gradientBox .gradientContent {
    flex-basis: 55%;
    max-width: 55%;
    padding: 50px 8% 50px 0;
}
.gradientSection .gradientBox .gradientContent .headings p {
    
    font-size: 40px; 
}
  }
  
  
  @media(max-width: 1199px){
    .gradientSection img { 
    max-height: 500px; 
}
.gradientSection .gradientBox .gradientContent {
    flex-basis: 65%;
    max-width: 65%;
    padding: 30px 10% 30px 0;
}
.gradientSection .gradientBox .gradientContent .headings p {
    font-size: 35px;
}
.gradientSection .gradientBox .gradientContent p {
 
    font-size: 16px;
}
  }
  
  @media(max-width: 767px){
.gradientSection .gradientBox .gradientContent .headings p {
    font-size: 23px;
}
.gradientSection .gradientBox .gradientContent {
    flex-basis: 100%;
    max-width: 100%;
    padding: 30px;
    text-align: center;
}
    .gradientSection .gradientBox {
    position: static;
     
}
.gradientSection img {
    
    position: absolute;
    height: 100%;
    max-height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    z-index: -2;
}
.gradientSection::before {
    z-index: -1;
    }
  }
</style>

